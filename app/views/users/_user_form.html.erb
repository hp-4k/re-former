<!-- FORM_FOR FORM -->
<% if @user.errors.any? %>
  <p><%= pluralize(@user.errors.count, 'error') %> were found:</p>
  
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @user do |f| %>
  <p><%= f.label :username, 'Username:' %></p>
  <p><%= f.text_field :username %></p>
  <p><%= f.label :email, 'Email:' %></p>
  <p><%= f.text_field :email %></p>
  <p><%= f.label :password, 'Password:' %></p>
  <p><%= f.password_field :password %></p>
  <p><%= f.submit 'Join!' %></p>
<% end %>